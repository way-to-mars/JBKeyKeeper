<UserControl x:Class="JBKeyKeeper.View.CustomHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JBKeyKeeper.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Border BorderBrush="#303030" BorderThickness="2" VerticalAlignment="Center"
                CornerRadius="8,8,0,0" Background="LightGray" Height="auto"
                Margin="0,0,0,2"
                >
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" VerticalAlignment="Top">
                <TextBlock Text="Header1" FontWeight="Bold" HorizontalAlignment="Center" Margin="5, 0, 5, 0"/>
                <TextBlock Text="Header2" FontWeight="Bold" HorizontalAlignment="Center" Margin="5, 0, 5, 0"/>
                <TextBlock Text="Header3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5, 0, 5, 0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
