<UserControl x:Class="JBKeyKeeper.View.JBBKItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JBKeyKeeper.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border BorderBrush="{StaticResource mainBorderBrush}" BorderThickness="1" VerticalAlignment="Center"
                CornerRadius="5" Background="{StaticResource mainBackBrush2}" Height="auto"
                Margin="2,5,5,2" Padding="4"
                >
        <Expander x:Name="Expander" Header="Name of Block" Foreground="{StaticResource fontBrush3}"
                  FontSize="13" >
           
        </Expander>
    </Border>

</UserControl>
