<Window x:Class="JBKeyKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JBKeyKeeper"
        xmlns:userControls="clr-namespace:JBKeyKeeper.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <userControls:UserControl1/>
        <userControls:ClearableTextBox Grid.Row="1" Height="30" Placeholder="введи текст, дубина"/>
        <TextBox Grid.Row="2" Name="txtInput" VerticalContentAlignment="Center" Width="250" Height="40"
                 FontSize="16" Text="{Binding BoundText, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="3" Name="btnSet" Content="Set" Width="100" Height="40"/>
        <TextBlock Grid.Row="4" Name="tbResult" FontSize="16" Text="{Binding BoundText}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</Window>
